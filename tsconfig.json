{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "lib": ["es2022"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types", "./typechain-types"]
  },
  "include": [
    "./scripts/**/*",
    "./test/**/*",
    "./typechain-types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "artifacts",
    "cache"
  ]
}